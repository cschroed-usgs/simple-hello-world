@Library('dockerCI@0.1.1') _

pipeline {
    agent {
        node {
            label 'project:any'
        }
    }
    parameters {
        choice(choices: ['snapshots', 'releases'], description: 'type of build', name: 'BUILD_TYPE')
    }
    stages {
        stage('build artifact') {
            steps {
                dockerPipeline()
            }
        }
    }
}
